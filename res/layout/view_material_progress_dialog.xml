<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:wheel="http://schemas.android.com/apk/res-auto" >
    
            <LinearLayout android:layout_width="104dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:id="@+id/progressing"
            android:gravity="center"
            android:background="@drawable/rectangle_rounded_angle_white_bg">
            
            <com.qpidnetwork.view.MaterialProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            wheel:matProg_barColor="@color/blue_color"
            wheel:matProg_progressIndeterminate="true"
            android:layout_marginBottom="16dp"
            android:id="@+id/progress"/>
            
            
            <TextView android:id="@+id/text1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color_dark"
                android:textSize="16sp"
                android:text="Updating..."/>
            
        </LinearLayout>
        
    

</LinearLayout>
