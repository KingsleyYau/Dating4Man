<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="280dp"
        android:background="@drawable/rectangle_rounded_angle_white_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/holder"
        android:gravity="center">
        

        
        <DatePicker android:id="@+id/date_picker"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp" />
        
        <LinearLayout 
            android:layout_height="48dp"
            android:layout_width="match_parent"
			android:gravity="right|center"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="2dp">
            
            <Button android:id="@+id/btn_cancel"
                android:layout_height="36dp"
                android:layout_width="wrap_content"
                android:minWidth="64dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/blue_color"
                android:textSize="16sp"
                android:text="@string/common_btn_cancel"
                android:layout_marginRight="8dp"
                android:textStyle="bold"
                android:background="@drawable/touch_feedback_holo_light_round_rectangle"/>
            
            <Button android:id="@+id/btn_ok"
                android:layout_height="36dp"
                android:layout_width="wrap_content"
                android:minWidth="64dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/blue_color"
                android:textSize="16sp"
                android:text="@string/common_btn_ok"
                android:textStyle="bold"
                android:background="@drawable/touch_feedback_holo_light_round_rectangle"/>
            
            
            
        </LinearLayout>
        
        
    </LinearLayout>
    

</LinearLayout>
