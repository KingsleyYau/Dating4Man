<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#FFFFFF" 
    android:fitsSystemWindows="true">


    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/actionbar_height">
        
        
        
        <com.qpidnetwork.dating.profile.MyProfileMatchCriteriaItemView
            android:id="@+id/layoutAge"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"/>
        
        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/listview_divider_grey" />
        
        <com.qpidnetwork.dating.profile.MyProfileMatchCriteriaItemView
            android:id="@+id/layoutChildren"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"            />
        
        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/listview_divider_grey" />
        
        <com.qpidnetwork.dating.profile.MyProfileMatchCriteriaItemView
            android:id="@+id/layoutEducation"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"            />        
       		
        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/listview_divider_grey" />
        
        <com.qpidnetwork.dating.profile.MyProfileMatchCriteriaItemView
            android:id="@+id/layoutRelationship"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"             />
        
        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/listview_divider_grey" />
                    
    </LinearLayout>
    
    <com.qpidnetwork.view.MaterialAppBar
        android:layout_height="@dimen/actionbar_height"
        android:layout_width="match_parent"
        android:id="@+id/appbar"/>

</RelativeLayout>
