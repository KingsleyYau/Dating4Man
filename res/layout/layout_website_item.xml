<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    android:orientation="vertical">
    
	  	<LinearLayout
  	    android:layout_width="match_parent"
    	android:layout_height="72dp"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
    	android:padding="16dp"
    	android:background="@drawable/touch_feedback_holo_light" >
    	
	  	    
  	    <com.qpidnetwork.framework.widget.CircleImageView
  	        android:id="@+id/imageView"
  	        android:layout_width="40dp"
	  	    android:layout_height="40dp"
	  	    android:src="@drawable/female_default_profile_photo_40dp"/>
  	    
  	    
  	    <LinearLayout
	  	    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:layout_weight="1">
	    	
    	    <TextView
		  	    android:id="@+id/textViewName"
		  	    android:layout_width="match_parent"
		  	    android:layout_height="wrap_content"
		  	    android:gravity="left"
		  	    android:layout_marginLeft="16dp"
		  	    android:text="CharmingData.com"
		  	    android:textSize="16sp"
		  	    android:textColor="@color/text_color_dark"
		  	    android:singleLine="true"
		  	    android:ellipsize="end"/>
    	    
    	     <TextView
		  	    android:id="@+id/textViewDesc"
		  	    android:layout_width="match_parent"
		  	    android:layout_height="wrap_content"
		  	    android:gravity="left"
		  	    android:layout_marginLeft="16dp"
		  	    android:text="Russia &amp; Ukraine Ladies"
		  	    android:textSize="14sp"
		  	     android:textColor="@color/text_color_grey"
		  	     		  	    android:singleLine="true"
		  	    android:ellipsize="end"/>	  
		  	          
  	    </LinearLayout>
  	    
  	    <ImageView android:layout_height="32dp"
  	        android:layout_width="32dp"
  	        android:id="@+id/select_indicator"
  	        android:src="@drawable/ic_location_red_24dp"
  	        android:layout_marginLeft="8dp"
  	        android:scaleType="center"/>

    </LinearLayout>
    
    <View android:layout_width="match_parent"
  	    android:layout_height="1dp"
  	    android:background="@color/listview_divider_grey" />
 
</LinearLayout>
