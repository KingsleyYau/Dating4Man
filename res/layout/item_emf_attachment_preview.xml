<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.qpidnetwork.view.FitTopImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="matrix"/>

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/touch_feedback_dark_grey_round"
            android:padding="4dp"
            android:src="@drawable/ic_play_circle_outline_white_48dp"
            android:visibility="gone" 
            android:clickable="false"/>

        <ImageView
            android:id="@+id/gift_mark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/circle_32000000_bg"
            android:scaleType="center"
            android:src="@drawable/ic_wallet_giftcard_white_18dp"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>