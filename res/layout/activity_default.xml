<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">
    
    
    <ImageView android:id="@+id/back_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"/>
    
    <com.qpidnetwork.view.MovingImageView
        android:id="@+id/imageView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    

	
	
	
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    
    <View android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#32000000"/>
    
    <TextView android:id="@+id/text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:text="Verified profiles of qaulity singles"
        android:gravity="center"
        android:layout_centerVertical="true"/>
    
    <LinearLayout android:id="@+id/skip"
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:background="@drawable/circle_grey_bg_dark"
        android:clickable="true"
        android:orientation="horizontal">
        
	    <TextView
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="16sp"
	        android:textStyle="bold"
	        android:text="@string/capitalized_skip"/>
	        
	    <ImageView android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/ic_keyboard_arrow_right_white_18dp"
	        android:layout_marginLeft="-4dp"
	        android:layout_marginRight="-4dp"/>
        
    </LinearLayout>
    
    

    
    
    
</RelativeLayout>