<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:padding="24dp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_add_screen_shot"
        android:textColor="@color/text_color_grey"
        android:textSize="16sp"
        android:layout_marginBottom="16sp"/>
    
    <RelativeLayout 
        android:layout_width="100dp"
	    android:layout_height="120dp"
	    android:layout_gravity="center"
	    android:padding="1dp"
	    android:background="#F0F0F0" >
	    <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_grey600_48dp"
            android:id="@+id/ivAddShot"/>
        <com.qpidnetwork.view.FitTopImageView
		    android:id="@+id/ivShotPhoto"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_gravity="center"
		    android:scaleType="centerCrop"
		    android:background="@drawable/touch_feedback_holo_light"/>
        
    </RelativeLayout>
    
</LinearLayout>