<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/actionbar_height" />
    
    <include
        android:id="@+id/errorPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/include_load_error_retry" 
        android:visibility="gone"
        android:layout_marginTop="@dimen/actionbar_height" />

    <com.qpidnetwork.view.MaterialAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height" />

    <com.qpidnetwork.view.ButtonFloat
        android:id="@+id/floatButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:visibility="gone"
        button:background="@color/blue_color"
        button:elevation="4dp"
        button:icon="@drawable/ic_add_white_24dp"
        button:radius="28dp"
        button:touch_feedback="@drawable/touch_feedback_holo_dark" />

</RelativeLayout>