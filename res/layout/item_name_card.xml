<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" 
    xmlns:wheel="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
    
    	<android.support.v7.widget.CardView 
	    android:id="@+id/cardView" 
	    android:layout_width="wrap_content"  
	    android:layout_height="wrap_content"  
	    android:orientation="horizontal"
	    card_view:cardBackgroundColor="#FFFFFF" 
	    card_view:cardCornerRadius="2dp"  
	    card_view:cardElevation="0dp"
	    card_view:cardPreventCornerOverlap="false"
	    card_view:cardUseCompatPadding="true">
	    
    	    <LinearLayout android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical">
    	        
    	        <RelativeLayout android:layout_width="wrap_content"
    	            android:layout_height="wrap_content">
    	            
    	            <com.qpidnetwork.view.FitTopImageView
					android:id="@+id/image"
    	            android:layout_width="280dp"
    	            android:layout_height="158dp"
    	            android:background="@color/brand_color_light11"
    	            android:scaleType="matrix"/>
    	            
    	            <com.qpidnetwork.view.MaterialProgressBar
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            wheel:matProg_barColor="@color/white"
            wheel:matProg_progressIndeterminate="true"
            android:layout_centerInParent="true"
            android:id="@+id/progress"/>
    	            
    	        </RelativeLayout>
    	        
    	        
    	        
    	        <LinearLayout android:layout_width="wrap_content"
    	            android:layout_height="wrap_content"
    	            android:layout_marginTop="24dp"
    	            android:layout_marginLeft="20dp"
    	            android:gravity="left|center"
    	            android:orientation="horizontal">
    	            
    	            <TextView android:id="@+id/name"
    	                android:layout_height="wrap_content"
    	                android:layout_width="wrap_content"
    	                android:textSize="18dp"
    	                android:textColor="@color/text_color_dark"
    	                android:textStyle="bold"/>
    	            
    	            <TextView android:id="@+id/age"
    	                android:layout_height="wrap_content"
    	                android:layout_width="wrap_content"
    	                android:textSize="16sp"
    	                android:textColor="@color/text_color_grey"
    	                android:textStyle="bold"
    					android:layout_marginLeft="16dp"
    					android:visibility="gone"/>
    	            
    	            <View android:layout_height="6dp"
    	                android:layout_width="6dp"
    	                android:layout_marginLeft="8dp"
    	                android:layout_marginRight="8dp"
    	                android:background="@drawable/circle_grey_bg"
    	                android:visibility="gone"/>
    	            
    	            <TextView android:id="@+id/country"
    	                android:layout_height="wrap_content"
    	                android:layout_width="wrap_content"
    	                android:textSize="16sp"
    	                android:textColor="@color/text_color_grey"
    	                android:textStyle="bold"
    	                android:text="Russia"
    	                android:visibility="gone"/>
    	            
    	            
    	        </LinearLayout>
    	        
    	            	        <RelativeLayout android:layout_width="match_parent"
    	            android:layout_height="48dp"
    	            android:layout_marginTop="8dp"
    	            android:layout_marginLeft="8dp"
    	            android:gravity="left|center"
    	            android:layout_marginBottom="16dp"
    	            android:layout_marginRight="8dp">
    	            	            
    	            	            <ImageButton android:id="@+id/btn_chat"
    	            	                android:layout_height="40dp"
    	            	                android:layout_width="40dp"
    	            	                android:src="@drawable/ic_chat_grey600_24dp"
    	            	                android:background="@drawable/touch_feedback_holo_light_circle"/>
    	            	            
    	            	            <ImageButton android:id="@+id/btn_mail"
    	            	                android:layout_height="40dp"
    	            	                android:layout_width="40dp"
    	            	                android:src="@drawable/ic_email_grey600_24dp"
    	            	                android:background="@drawable/touch_feedback_holo_light_circle"
    	            	                android:layout_marginLeft="8dp"
    	            	                android:layout_toRightOf="@id/btn_chat"/>
    	            	            
    	            	            
    	            	            <ImageButton android:id="@+id/btn_call"
    	            	                android:layout_height="40dp"
    	            	                android:layout_width="40dp"
    	            	                android:src="@drawable/ic_call_grey600_24dp"
    	            	                android:background="@drawable/touch_feedback_holo_light_circle"
    	            	                android:layout_marginLeft="8dp"
    	            	                android:layout_toRightOf="@id/btn_mail"
    	            	                android:visibility="gone"/>
    	            	            
    	            	            
    	            	            <ImageButton android:id="@+id/btn_favorite"
    	            	                android:layout_height="40dp"
    	            	                android:layout_width="40dp"
    	            	                android:src="@drawable/ic_favorite_outline_grey600_24dp"
    	            	                android:background="@drawable/touch_feedback_holo_light_circle"
    	            	                android:layout_alignParentRight="true" />
    	            	            
    	            	            
    	            	        </RelativeLayout>
    	        
    	        
    	    </LinearLayout>
    	    
    	    
    	    
    	    
    	    
    	</android.support.v7.widget.CardView>
    

</LinearLayout>
