<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded_angle_white_bg"
    android:orientation="vertical"
    android:paddingBottom="16dp">
    
	<RelativeLayout android:id="@+id/header"
	    android:layout_width="match_parent"
   		android:layout_height="72dp"
	    android:background="@drawable/round_top_rectangle_cd_theme_2dp">

	    
	    
	    <ImageView android:id="@+id/qpid_logo"
		    android:layout_width="48dp"
	   		android:layout_height="48dp"
	   		android:src="@drawable/logo_white_48dp"	
	   		android:layout_marginLeft="16dp"
	   		android:layout_centerVertical="true"        />
	    
	    <LinearLayout android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:orientation="vertical"
	        android:layout_marginLeft="16dp"
	        android:layout_toRightOf="@id/qpid_logo"
	        android:layout_marginRight="16dp"
	        android:gravity="left|center">
	        
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:textColor="@color/white"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/app_name"/>
	        
	        <TextView android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:textColor="@color/white"
	            android:textSize="18sp"
	            android:text="@string/app_description"/>
	        
	    </LinearLayout>
	    
	    	    
    </RelativeLayout>
    
		<TextView
	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:gravity="center_horizontal"
   		android:paddingLeft="16dp"
   		android:paddingRight="16dp"
   		android:paddingTop="16dp"
   		android:text="@string/get_qpid_credits_to_continue"
   		android:textColor="@color/text_color_grey"
   		android:textSize="18sp"/>   
	
	    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:verticalSpacing="1dp" 
        android:scrollbars="none"
        android:listSelector="@null"
        android:layout_margin="16dp"
        android:cacheColorHint="#00ffffff"
        android:layout_weight="1"/>
	    
	    	<TextView
	    android:layout_width="match_parent"
   		android:layout_height="36dp"
   		android:text="@string/more_options"
   		android:textColor="@color/text_color_grey"
   		android:textSize="16sp"
	    android:id="@+id/tvMore"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:background="@drawable/touch_feedback_holo_light_round_rectangle"
	    android:gravity="center"/>
	    
    
 
	
	
	

</LinearLayout>
