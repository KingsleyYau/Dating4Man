<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_angle_solid_pick_rect_bg"
        android:drawableLeft="@drawable/ic_warning_grey600_24dp"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:text="@string/monthly_fee_emf_detail_error_tips"
        android:textColor="@color/text_color_dark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" 
        android:orientation="vertical"
        android:background="@drawable/rectangle_round_angle_stroke_grey_solid_white"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color_dark"
            android:textSize="18sp" />

        <com.qpidnetwork.view.CustomListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/tiny_grey_solid"
            android:clickable="false"
            android:divider="@null"
            android:listSelector="#00FFFFFF"
            android:padding="10dp"
            android:visibility="visible" />

        <com.qpidnetwork.view.ButtonRaised
            android:id="@+id/btnSubscribe"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            button:elevation="0dp"
            button:radius="26dp"
            button:title="@string/go_premium"
            button:title_color="@color/white"
            button:touch_feedback="@drawable/touch_feedback_holo_dark" 
            button:background="@color/blue_color"/>
    </LinearLayout>

</LinearLayout>