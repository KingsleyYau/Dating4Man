<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    xmlns:circleimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tiny_grey_solid">


    
    <LinearLayout android:id="@+id/llDescription"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/love_call_empty_advert_desc"
        android:textColor="@color/Gray"
        android:textSize="16sp" />

    <com.qpidnetwork.view.ButtonRaised
        android:id="@+id/btnCall"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        button:background="@color/blue_color"
        button:elevation="1dp"
        button:radius="2dp"
        button:title="@string/lovecall_details_btn_call"
        button:title_color="@color/white"
        button:touch_feedback="@drawable/touch_feedback_holo_dark" />
     </LinearLayout>
     
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@id/llDescription" >


    
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_call"/>
        

        <TextView
            android:id="@+id/tvLoveCallType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/admirer_mail_empty"
            android:textColor="@color/text_color_grey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
        
        
    </LinearLayout>

</RelativeLayout>