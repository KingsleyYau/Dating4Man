<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="baseTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- menu cell style -->
    <style name="menu_desc_textview" parent="baseTextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/menu_desc_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="menu_tips_textview" parent="baseTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/menu_tips_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="menu_username_textview" parent="baseTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="Transparent">
	　　<item name="android:windowBackground">@color/transparent</item>
	　　<item name="android:windowIsTranslucent">true</item>
	　　<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
　　</style>

    <style name="ChoosePhotoDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- video show -->
    
    <!-- [进度圈公共] -->
    <style name="Progress" parent="android:Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:animationDuration">1</item>
    </style>

    
    
    <!-- 聊天窗口相关样式 -->
    <style name="chat_msgrow">
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>
    
    <style name="chat_msgdiv">
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:clickable">true</item>
    </style>
    
     <style name="chat_msgdiv_content">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="chat_msgdiv_desc">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>
    
    <!-- 用于LiveChat工具栏弹出 -->
    <style name="chat_box_tool_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>  
     	<item name="android:windowIsTranslucent">true</item>  
     	<item name="android:windowNoTitle">true</item>  
     	<item name="android:windowAnimationStyle">@style/animation_bottom_in_out</item>
    </style>
    
    <style name="animation_bottom_in_out" parent="@android:style/Animation.Activity">  
	    <item name="android:activityOpenEnterAnimation">@anim/anim_bottom_in</item>  
	    <item name="android:activityOpenExitAnimation">@anim/anim_bottom_out</item>  
	     <item name="android:activityCloseEnterAnimation">@anim/anim_bottom_in</item>  
	    <item name="android:activityCloseExitAnimation">@anim/anim_bottom_out</item>  
	</style>
	
    <style name="AppProgressBar" parent="@android:style/Widget.ProgressBar.Large"></style>
	
    
    <!-- 2vs 移过来 -->
    
    <!-- 对话框 -->
    <style name="DialogText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="DialogText.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 带图标对话框底部按钮样式 -->
    <style name="dialog1_btn">
        <item name="android:layout_height">43dip</item>
        <item name="android:layout_marginLeft">0.1dip</item>
        <item name="android:layout_marginRight">0.1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    


    <style name="DropDownListAnimation" parent="android:Animation" mce_bogus="1">      
         <item name="android:windowEnterAnimation">@anim/anim_dropdown_list_show</item>  
        <item name="android:windowExitAnimation">@anim/anim_dropdown_list_dismiss</item>  
    </style>  
    
    
    <style name="search_tag_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/touch_feedback_round_border_white_24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    
</resources>
